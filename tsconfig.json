{
  "compilerOptions": {
    "outDir": "./dist/",
    //    "noImplicitAny": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "noImplicitThis": true
  },
  "include": [
    "src/**/*"
  ]
}
